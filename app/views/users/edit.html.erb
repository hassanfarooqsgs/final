  <h1>Edit User</h1>
  <%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  
  <%= form.label :Firstname %>
  <%= form.text_field :first_name %>
  
  <%= form.label :Middlename %>
  <%= form.text_field :middle_name %>

  <%= form.label :lastname %>
  <%= form.text_field :last_name %>

  <%= form.label :Email %>
  <%= form.email_field :email %>

  <%= form.label :Phone %>
  <%= form.text_field :phone_number %>

  <%= form.label :Country %>
  <%= form.select :country, User::Country_options %>
 
  <%= form.label :image, "Upload Profile Picture" %>
  <%= form.file_field :image, accept: 'image/png, image/gif, image/jpeg'  %>

  <%= form.submit 'Update' %>
  <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>

<% end %>
